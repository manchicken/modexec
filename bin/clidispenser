use strict;
use warnings;

use lib qw(./lib ../lib ./dispensers ../dispensers);
use Error qw/:try/;
use ModExec;
use Data::Dumper;

our $VERSION = 0.1;

my $retval = undef;
my $meh = new ModExec (
  driver => q{Perl},
  module => q{ModExecTest},
  auth => sub {return 1;});

try {
  $retval = $meh->exec(q{foo}, undef);
} otherwise {
  my $err = shift;
  die ($err->stringify);
};

print Dumper($retval);